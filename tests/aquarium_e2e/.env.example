# Aquarium E2E Test Configuration
# Copy this file to .env to customize test behavior

# Browser Settings
# Run tests with visible browser (default: true for headless)
HEADLESS=true

# Slow down Playwright operations by N milliseconds (useful for debugging)
SLOW_MO=0

# Server Settings
# Port for Aquarium IDE server
AQUARIUM_PORT=8052

# Server startup timeout in seconds
SERVER_STARTUP_TIMEOUT=30

# Test Execution Settings
# Enable parallel test execution
PYTEST_XDIST_AUTO=false

# Test timeout in seconds
TEST_TIMEOUT=300

# Screenshot Settings
# Take screenshots on test failure (always/never/only-on-failure)
SCREENSHOT_MODE=only-on-failure

# Screenshot directory (relative to test directory)
SCREENSHOT_DIR=screenshots

# Performance Settings
# Maximum allowed page load time in seconds
MAX_PAGE_LOAD_TIME=10

# Maximum allowed compilation time in seconds
MAX_COMPILATION_TIME=30

# Logging Settings
# Log level for test output (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Enable detailed Playwright traces
PLAYWRIGHT_TRACE=false

# CI/CD Settings
# Indicates if running in CI environment
CI=false

# Maximum retries for flaky tests
MAX_RETRIES=0

# Advanced Settings
# Browser launch arguments (comma-separated)
BROWSER_ARGS=

# Network conditions simulation (none/slow3g/fast3g)
NETWORK_SIMULATION=none

# Device emulation (empty for desktop)
DEVICE_EMULATION=

# Video recording (on/off/retain-on-failure)
VIDEO_RECORDING=off
