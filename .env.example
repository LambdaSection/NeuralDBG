# Neural DSL Configuration Template
# =============================================================================
# Copy this file to .env and customize for your deployment
# 
# IMPORTANT: Never commit .env files with real secrets to version control
#
# Validate your configuration before deployment:
#   neural config validate
#
# Generate secure keys:
#   python -c "import secrets; print(secrets.token_hex(32))"
# =============================================================================

# =============================================================================
# SECURITY (REQUIRED FOR ALL SERVICES)
# =============================================================================
# Secret key for encryption and signing
# MUST be at least 32 characters and unique per deployment
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production-use-strong-random-key

# Authentication
NEURAL_AUTH_ENABLED=true
NEURAL_AUTH_TYPE=basic  # Options: basic, jwt

# HTTP Basic Authentication
NEURAL_AUTH_USERNAME=admin
NEURAL_AUTH_PASSWORD=changeme

# JWT Authentication
NEURAL_JWT_SECRET_KEY=your-secret-key-here-change-in-production
NEURAL_JWT_ALGORITHM=HS256
NEURAL_JWT_EXPIRATION_HOURS=24

# CORS Configuration
NEURAL_CORS_ENABLED=true
NEURAL_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
NEURAL_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
NEURAL_CORS_ALLOW_HEADERS=Content-Type,Authorization
NEURAL_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
NEURAL_RATE_LIMIT_ENABLED=true
NEURAL_RATE_LIMIT_REQUESTS=100
NEURAL_RATE_LIMIT_WINDOW_SECONDS=60

# Security Headers
NEURAL_SECURITY_HEADERS_ENABLED=true

# SSL/TLS Configuration
NEURAL_SSL_ENABLED=false
NEURAL_SSL_CERT_FILE=/path/to/cert.pem
NEURAL_SSL_KEY_FILE=/path/to/key.pem

# =============================================================================
# API SERVER
# =============================================================================
# Server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# Database configuration
# SQLite (development): sqlite:///./neural_api.db
# PostgreSQL (production): postgresql://user:password@localhost:5432/neural_api
DATABASE_URL=sqlite:///./neural_api.db

# Storage paths for models, experiments, and artifacts
STORAGE_PATH=./neural_storage
EXPERIMENTS_PATH=./neural_experiments
MODELS_PATH=./neural_models

# Rate limiting to prevent abuse
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS origins (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# API authentication
API_KEY_HEADER=X-API-Key

# =============================================================================
# DASHBOARD (NeuralDbg)
# =============================================================================
# Dashboard server configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050

# WebSocket update interval in milliseconds
DASHBOARD_WEBSOCKET_INTERVAL=1000

# Dashboard authentication (optional)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=

# =============================================================================
# AQUARIUM (Visual IDE)
# =============================================================================
# Aquarium server configuration
AQUARIUM_HOST=0.0.0.0
AQUARIUM_PORT=8051

# =============================================================================
# MARKETPLACE
# =============================================================================
# Marketplace server configuration
MARKETPLACE_HOST=0.0.0.0
MARKETPLACE_PORT=5000

# Model registry storage directory
REGISTRY_DIR=neural_marketplace_registry

# HuggingFace Hub integration (optional)
# Get token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# =============================================================================
# REDIS (Cache & Message Broker)
# =============================================================================
# Redis server configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# CELERY (Async Task Queue)
# =============================================================================
# Celery broker and result backend URLs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# WEBHOOKS
# =============================================================================
# Webhook configuration for async job notifications
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_LIMIT=3

# =============================================================================
# POST-RELEASE AUTOMATION (Optional)
# =============================================================================
# Netlify Build Hook URL for triggering site deployments
# Get from: Netlify → Site settings → Build & deploy → Build hooks
NETLIFY_BUILD_HOOK=

# Vercel Deploy Hook URL for triggering deployments
# Get from: Vercel → Project settings → Git → Deploy Hooks
VERCEL_DEPLOY_HOOK=

# Discord Webhook URL for release notifications
# Get from: Discord → Server settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=

# =============================================================================
# CLOUD INTEGRATIONS (Optional)
# =============================================================================
# AWS credentials for SageMaker integration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Google Cloud credentials for Vertex AI integration
GOOGLE_APPLICATION_CREDENTIALS=

# Azure credentials for Azure ML integration
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_WORKSPACE_NAME=

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# NOTES
# =============================================================================
# 1. For production deployments:
#    - Generate a strong SECRET_KEY (min 32 chars)
#    - Use PostgreSQL instead of SQLite
#    - Set DEBUG=false
#    - Configure CORS_ORIGINS appropriately
#    - Use strong passwords for all services
#    - Enable TLS/SSL for all connections
#
# 2. For GitHub Actions and CI/CD:
#    - Set secrets as repository secrets, not in .env files
#    - Go to: Settings → Secrets and variables → Actions → New repository secret
#
# 3. For Kubernetes deployments:
#    - Use ConfigMaps for non-sensitive configuration
#    - Use Secrets for sensitive data (SECRET_KEY, DATABASE_URL, etc.)
#    - See kubernetes/neural-secrets.yaml for template
#
# 4. Validation:
#    - Run 'neural config validate' before deployment
#    - Use 'neural config check-health' to verify services
#    - Generate validation report: 'neural config validate --report report.txt'
