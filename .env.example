# Neural DSL API Configuration

# Server settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security settings
SECRET_KEY=change-me-in-production-use-strong-random-key
API_KEY_HEADER=X-API-Key

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Redis settings for Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database settings
DATABASE_URL=sqlite:///./neural_api.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/neural_api

# Storage settings
STORAGE_PATH=./neural_storage
EXPERIMENTS_PATH=./neural_experiments
MODELS_PATH=./neural_models

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_LIMIT=3

# CORS settings (comma-separated list)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Post-Release Automation (optional)
# Netlify Build Hook URL for triggering site deployments
NETLIFY_BUILD_HOOK=https://api.netlify.com/build_hooks/your_hook_id

# Vercel Deploy Hook URL for triggering deployments
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/your_hook_id

# Discord Webhook URL for release notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_token

# Note: For GitHub Actions, set these as repository secrets instead
# Settings → Secrets and variables → Actions → New repository secret
